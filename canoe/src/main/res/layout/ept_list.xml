<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emptyList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:visibility="gone"
    tools:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgEmptyList"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginBottom="@dimen/abc_list_item_padding_horizontal_material"
                android:background="@drawable/shape_circle"
                android:padding="8dp"
                android:tint="?colorPrimary"
                app:srcCompat="@drawable/ic_format_list_bulleted_white_64dp" />

            <TextView
                android:id="@+id/tvEmptyListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/abc_list_item_padding_horizontal_material"
                android:text="@string/no_records_found"
                android:textAllCaps="true"
                android:textColor="?colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvEmptyListMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textAllCaps="true"
                android:textColor="?colorAccent"
                android:textSize="16sp"
                tools:text="Message" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>